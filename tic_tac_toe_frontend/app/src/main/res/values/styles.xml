<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- PUBLIC_INTERFACE -->
    <!-- Theme.TicTacToe.Ocean: App theme using Ocean Professional colors -->
    <style name="Theme.TicTacToe.Ocean" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:colorBackground">@color/ocean_background</item>
        <item name="android:textColor">@color/ocean_text</item>
        <item name="android:buttonStyle">@style/Widget.TicTacToe.Button</item>
    </style>

    <!-- Modern rounded button with primary background -->
    <style name="Widget.TicTacToe.Button" parent="@android:style/Widget.Material.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">14dp</item>
    </style>
</resources>
